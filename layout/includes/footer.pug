#footer-wrap
  if site.data.footer
    - let footer = site.data.footer
      .footer-social
        .social-content
          each icon in footer.social_icon
            if icon.name == "返回顶部"
              button#go-to-up(type="button" ,title="返回顶部")
                img(src=icon.icon)
            else 
              .icon-content
                a.social-icon(href=icon.link, title=icon.name)
                  i(class=icon.icon)
      .footer-link 
        .link-content 
          each category in footer.link_category
            .link-category 
              span.category_name= category.category_name 
              each link in category.links 
                a.category-link(href=link.link, title=link.name)= link.name
      .footer-icon
        .icon-content 
          each icon in footer.icons
            a.icon-item(href=icon.link, title=icon.description)
              img(src=icon.icon_url)
  .footer-under
    if theme.footer.owner.enable
      - var now = new Date()
      - var nowYear = now.getFullYear()
      if theme.footer.owner.since && theme.footer.owner.since != nowYear
        span.copyright!= `&copy;${theme.footer.owner.since} - ${nowYear} By ${config.author}`
      else
        .copyright!= `&copy;${nowYear} By ${config.author}`
    if theme.footer.custom_text
      span.footer_custom_text!=`${theme.footer.custom_text}`
    if theme.footer.copyright
      .framework-info
        span= _p('footer.framework') + ' '
        a(href='https://hexo.io')= 'Hexo'
        span.footer-separator= '  |  '
        span= _p('footer.theme') + ' '
        a(href='https://github.com/jerryc127/hexo-theme-butterfly')= 'Butterfly'

