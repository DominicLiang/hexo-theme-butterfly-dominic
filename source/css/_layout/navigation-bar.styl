#navigation-bar
    background var(--card-bg)
    outline 1px solid $outline-color
    border-radius 8px
    font-size 1 rem
    padding 5px 15px
    transition 0.3s

    i
        margin-left 15px
        margin-right 5px

    a
        padding 5px 8px
        border-radius 4px
        margin 0px 2px
        transition 0.3s
        color var(--font-color)

        &.home-page-btn
            color $theme-color

        &:not(.more-btn)
            &:hover
                background $theme-color
                color $white

        &.more-btn
            &:hover
                color $theme-color

    &:hover
        outline 1px solid $theme-color