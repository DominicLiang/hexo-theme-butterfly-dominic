#article-container
  .flink
    margin-bottom 20px

    .flink-list
      overflow auto
      padding 0px 0px 20px 0px
      text-align center

      & > .flink-list-item
        position relative
        float left
        overflow hidden
        margin 5px
        width calc(100% / 3 - 10px)
        height 90px
        border-radius 8px
        line-height 17px
        -webkit-transform translateZ(0)
        outline 1px solid $outline-color
        transition all 0.5s

        .flink-item-name, .flink-item-desc
          text-align left

        .flink-item-name
          margin-top 8px

        .flink-item-desc
          padding-top 5px

        +maxWidth1024()
          width calc(50% - 15px) !important

        +maxWidth600()
          width calc(100% - 15px) !important

        &:hover
          outline 1px solid $theme-color
          background $theme-color

          .flink-item-name, .flink-item-desc
            color $white !important

        // &:before
        // position absolute
        // top 0
        // right 0
        // bottom 0
        // left 0
        // z-index -1
        // background var(--text-bg-hover)
        // content ''
        // transition transform 0.3s ease-out
        // transform scale(0)

        // &:hover:before, &:focus:before, &:active:before
        // transform scale(1)
        a
          color var(--font-color)
          text-decoration none

          .flink-item-icon
            float left
            overflow hidden
            margin 15px 10px
            width 60px
            height 60px
            border-radius 35px
            transition width 0.3s ease-out

            img
              width 100%
              height 100%
              transition filter 375ms ease-in 0.2s, transform 0.3s
              object-fit cover

          .img-alt
            display none

    .flink-item-name
      @extend .limit-one-line
      padding 16px 10px 0 0
      height 40px
      font-weight bold
      font-size 1.43em

    .flink-item-desc
      @extend .limit-one-line
      padding 16px 10px 16px 0
      height 50px
      font-size 0.93em

    .flink-name
      margin-bottom 5px
      font-weight bold
      font-size 1.5em

  .link-btn
    width 100%
    display flex
    justify-content center
    flex-wrap wrap

    #link-button
      transition 0.3s
      display flex
      margin 5px auto
      color var(--font-color)
      padding 8px 15px
      border-radius 8px
      align-items center
      background #ffffff00
      color $theme-color
      outline 1px solid $theme-color

      &:hover
        background $theme-color
        color $white
        outline 1px solid $theme-color
